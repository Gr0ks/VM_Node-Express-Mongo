<h2>Todos page</h2>

{{#if todos.length}}
<ul>
  {{#each todos as | todo |}}
    <li class="todo">
      <label>
        {{#with todo}}
        {{#if completed}}
          <input type="checkbox" checked>
          <span class="completed">{{title}}</span>

          <button class="btn btn-small">Save</button>
        {{else}}
          <input type="checkbox">
          <span>{{title}}</span>

          <button class="btn btn-small">Save</button>
        {{/if}}  
        {{/with}}      
      </label>
    </li>
  {{/each}}
</ul>
{{else}}
<p>No todos!</p>
{{/if}}